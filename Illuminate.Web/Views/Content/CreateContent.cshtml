@{  
    ViewBag.Title = "Create Content";
    ViewBag.Module = "content";
}
<script src="../Scripts/angular.js"></script>
<script src="../Scripts/application/createcontent.controller.js"></script>

<style type="text/css">
     .sidebar-nav-fixed {
        padding: 9px 0;
        position:fixed;
        left:20px;
        top:70px;
        width:215px;
     }
      .row-fluid > .span-fixed-sidebar {
        margin-left: 270px;
     }
 </style>
    <div class="container-fluid">
    <div class="row-fluid row">
       <div class="span10 span-fixed-sidebar">
                <div data-ng-app="content"  data-ng-controller="CreateContentCtrl" data-ng-init="getChannels()">
                  <form role="form">
                     <fieldset>
                       <legend>New content</legend>
                       <div class="form-group">
                           <label>Channel</label>
                           <select data-ng-model="categoryId" data-ng-options="c.CategoryId as c.Name for c in validCategories" required>
                       </select>
                       </div>
                       <div class="form-group">
                        <label>Title</label>
                        <input type="text" data-ng-model="title" placeholder="Content title…">
                       </div>
                       <div class="form-group">
                           <label>Author</label>
                           <input type="text" data-ng-model="author" placeholder="@ViewBag.LoggedInUser" data-ng-disabled="true">
                       </div>
                       <div class="form-group">
                        <label>Content Description</label>
                       </div>
                       <div class="form-group">
                        <textarea rows="3" cols="30" data-ng-model="description" required></textarea>
                       </div>
                       <div class="form-group">
                        <input type="file" file-upload/>
                           <p class="help-block">Choose the file to upload</p>
                        <ul>
                         <li data-ng-repeat="file in files">{{file.name}}</li>
                        </ul>
                        </div>
                       <button data-ng-click="publish()" class="btn btn-primary">Publish</button>
                      </fieldset>
                 </form>

                 <hr/>
                </div>
            </div>
     </div>
    </div>